{
  "name": "@vivid/root",
  "private": true,
  "description": "Web components based on branded design system by Vonage. following open-wc recommendations",
  "author": "Vonage",
  "license": "MIT",
  "workspaces": [
    "components/*",
    "common/*"
  ],
  "scripts": {
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "format": "yarn format:eslint && yarn format:prettier",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:bs": "karma start karma.bs.config.js --coverage",
    "prepack": "yarn build",
    "postinstall": "yarn bootstrap",
    "bootstrap": "lerna bootstrap",
    "storybook:build": "build-storybook",
    "storybook:start": "concurrently --kill-others --names tsc,storybook \"yarn watch\" \"start-storybook -s storybook-static --node-resolve --watch -p 9384\"",
    "build": "yarn build:styles && yarn build:typescript",
    "build:styles": "./scripts/build-styles.sh",
    "build:typescript": "tsc --build",
    "start": "yarn build && yarn dev:server",
    "dev:server": "es-dev-server --config es-dev-server.config.js",
    "powerwash:ts": "rm components/*/*.js & rm components/*/*.js.map & rm components/*/*.d.ts & rm components/*/.tsbuildinfo && rm common/*/*.js & rm common/*/*.js.map & rm common/*/*.d.ts & rm common/*/.tsbuildinfo ",
    "powerwash:styling": "rm components/*/src/*.css.ts & rm common/*/src/*.css.ts",
    "powerwash": "yarn powerwash:ts & yarn powerwash:styling && rm -rf node_modules",
    "watch": "node scripts/watcher.js"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^0.21.0",
    "@open-wc/demoing-storybook": "^2.0.0",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/prettier-config": "^0.1.10",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "@open-wc/testing-karma-bs": "^1.0.0",
    "@rollup/plugin-typescript": "^4.0.0",
    "@webcomponents/webcomponentsjs": "^2.4.3",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.45.3",
    "eslint": "^6.1.0",
    "fibers": "^4.0.2",
    "husky": "^1.0.0",
    "lerna": "^3.20.2",
    "lint-staged": "^8.0.0",
    "node-sass": "^4.13.1",
    "node-sass-import": "^2.0.1",
    "node-watch": "^0.6.3",
    "rimraf": "^2.6.3",
    "rollup": "^1.15.4",
    "sass": "^1.26.3",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": "@open-wc/prettier-config/prettier.config.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "concurrently": "^5.2.0"
  }
}
