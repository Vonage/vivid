    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-firefox-launcher": "^1.3.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "kefir": "^3.8.7",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "lodash": "^4.17.15",
