    "ramda": "^0.27.0",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.12.0",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-terser": "^6.1.0",
    "sass": "^1.26.10",
    "style-dictionary": "^2.10.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.7",
    "web-component-analyzer": "^1.1.6"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:demo": "yarn compile && rimraf dist && rollup -c rollup.demo.config.js",
    "changelog": "yarn lerna exec --concurrency 1 --stream 'conventional-changelog --preset angular --release-count 0 --commit-path $PWD --pkg $PWD/package.json --outfile $PWD/CHANGELOG.md --verbose'",
    "compile": "yarn compile:design-tokens && yarn compile:styles && yarn compile:typescript",
    "compile:design-tokens": "node ./design-tokens/renderers/index.js",
    "compile:styles": "node ./common/fonts/build/generate-font-combos.js && ./scripts/build-styles.sh",
    "compile:typescript": "tsc --build",
    "dep-check": "lerna exec --stream --no-bail depcheck",
    "dev:server": "es-dev-server --config es-dev-server.config.js",
    "format": "yarn format:eslint && yarn format:prettier",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .eslintignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .eslintignore",
    "git:clean": "git clean -xdf",
    "git:sync": "git submodule sync && git submodule update --init --recursive --remote",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint components/** common/** --no-error-on-unmatched-pattern --ignore-path .eslintignore --config .eslintrc.yaml",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .eslintignore",
    "postinstall": "yarn bootstrap",
    "prestart": "yarn compile",
    "start": "yarn dev:server",
    "storybook:build": "node ./scripts/storybook/prepare-sb-details.js && yarn wca:custom-elements && build-storybook -c .storybook -o .out -s ./.storybook/static && node ./scripts/storybook/update-sb-base-url.js",
    "storybook:start": "node scripts/storybook/prepare-sb-details.js && yarn wca:custom-elements && start-storybook -s ./.storybook/static -p 9000",
    "test": "karma start --coverage",
    "test:bs": "karma start karma.bs.config.js --coverage",
    "test:dev": "yarn compile && concurrently \"yarn tsc:watch\" \"karma start --auto-watch=true --single-run=false --browsers=Chrome\"",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:update-snapshots": "karma start --update-snapshots",
    "tsc:watch": "tsc --build --watch",
    "watch": "node scripts/watcher.js",
    "wca:custom-elements": "yarn compile && wca analyze components/icon/src/vwc-icon.js components/**/*.d.ts --outFile custom-elements.json"
  },
  "workspaces": [
    "common/*",
    "components/*"
  ],
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint"
    ]
  }
}
