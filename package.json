{
	"name": "@vivid/root",
	"private": true,
	"description": "Web Components based on branded design system by Vonage, following open-wc recommendations",
	"author": "Vonage",
	"license": "Apache-2.0",
	"workspaces": [
		"common/*",
		"components/*"
	],
	"scripts": {
		"changelog": "yarn lerna exec --concurrency 1 --stream 'conventional-changelog --preset angular --release-count 0 --commit-path $PWD --pkg $PWD/package.json --outfile $PWD/CHANGELOG.md --verbose'",
		"lint:eslint": "eslint components/** common/** --no-error-on-unmatched-pattern --ignore-path .eslintignore --config .eslintrc.yaml",
		"format:eslint": "eslint --ext .js,.html . --fix --ignore-path .eslintignore",
		"lint:prettier": "prettier \"**/*.js\" --check --ignore-path .eslintignore",
		"format:prettier": "prettier \"**/*.js\" --write --ignore-path .eslintignore",
		"lint": "yarn lint:eslint && yarn lint:prettier",
		"format": "yarn format:eslint && yarn format:prettier",
		"tsc:watch": "tsc --build --watch",
		"test": "karma start --coverage",
		"test:dev": "yarn compile && concurrently \"yarn tsc:watch\" \"karma start --auto-watch=true --single-run=false --browsers=Chrome\"",
		"test:update-snapshots": "karma start --update-snapshots",
		"test:prune-snapshots": "karma start --prune-snapshots",
		"test:bs": "karma start karma.bs.config.js --coverage",
		"git:sync": "git submodule sync && git submodule update --init --recursive --remote",
		"postinstall": "yarn bootstrap",
		"bootstrap": "lerna bootstrap",
		"storybook:build": "node ./scripts/storybook/prepare-sb-details.js && yarn wca:custom-elements && build-storybook -c .storybook -o .out -s ./.storybook/static && node ./scripts/storybook/update-sb-base-url.js",
		"storybook:start": "node scripts/storybook/prepare-sb-details.js && yarn wca:custom-elements && start-storybook -s ./.storybook/static -p 9000",
		"compile": "yarn compile:design-tokens && yarn compile:styles && yarn compile:typescript",
		"compile:styles": "node common/design-tokens/mixinsConfigurations/configurations/typography/generate-font-combos.js.bak && ./scripts/build-styles.sh",
		"compile:typescript": "tsc --build",
		"compile:design-tokens": "common/design-tokens/mixinsConfigurations/build-design-tokens-mixins.sh && node ./design-tokens/renderers/index.js",
		"prestart": "yarn compile",
		"start": "yarn dev:server",
		"build:demo": "yarn compile && rimraf dist && rollup -c rollup.demo.config.js",
		"dev:server": "es-dev-server --config es-dev-server.config.js",
		"git:clean": "git clean -xdf",
		"watch": "node scripts/watcher.js",
		"wca:custom-elements": "yarn compile && wca analyze components/**/*.d.ts --outFile custom-elements.json"
	},
	"dependencies": {
		"lit-html": "^1.2.1",
		"navigo": "^7.1.2"
	},
	"devDependencies": {
		"@babel/core": "^7.10.4",
		"@open-wc/building-rollup": "^1.3.1",
		"@open-wc/eslint-config": "^2.0.6",
		"@open-wc/karma-esm": "^2.16.10",
		"@open-wc/testing": "^2.5.16",
		"@open-wc/testing-karma": "^3.3.30",
		"@open-wc/testing-karma-bs": "^1.3.73",
		"@rollup/plugin-babel": "^5.0.2",
		"@rollup/plugin-typescript": "^4.1.2",
		"@storybook/addon-a11y": "^5.3.19",
		"@storybook/addon-actions": "^5.3.19",
		"@storybook/addon-console": "^1.2.1",
		"@storybook/addon-docs": "^5.3.19",
		"@storybook/addon-knobs": "^5.3.19",
		"@storybook/addon-storysource": "^5.3.19",
		"@storybook/addon-viewport": "^5.3.19",
		"@storybook/addons": "^5.3.19",
		"@storybook/react": "^5.3.19",
		"@storybook/theming": "^5.3.19",
		"@storybook/web-components": "^5.3.19",
		"@typescript-eslint/eslint-plugin": "^3.5.0",
		"@typescript-eslint/parser": "^3.5.0",
		"@webcomponents/webcomponentsjs": "^2.4.3",
		"babel-loader": "^8.1.0",
		"chai": "^4.2.0",
		"chai-karma-snapshot": "^0.8.0",
		"chokidar": "^3.4.0",
		"command-line-args": "^5.1.1",
		"command-line-usage": "^6.1.0",
		"concurrently": "^5.2.0",
		"conventional-changelog-cli": "^2.0.34",
		"deepmerge": "^4.2.2",
		"es-dev-server": "^1.50.8",
		"eslint": "^7.5.0",
		"eslint-plugin-babel": "^5.3.1",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-lit": "^1.2.0",
		"eslint-plugin-mocha": "^7.0.1",
		"eslint-plugin-wc": "^1.2.0",
		"fibers": "^5.0.0",
		"husky": "^4.2.5",
		"karma": "^5.1.0",
		"karma-chai": "^0.1.0",
		"karma-chrome-launcher": "^3.1.0",
		"karma-coverage-istanbul-reporter": "^3.0.3",
		"karma-firefox-launcher": "^1.3.0",
		"karma-mocha": "^2.0.1",
		"karma-mocha-reporter": "^2.2.5",
		"lerna": "^3.22.1",
		"lint-staged": "^10.2.11",
		"lodash": "^4.17.15",
		"mocha": "^8.0.1",
		"node-sass": "^4.14.1",
		"node-sass-import": "^2.0.1",
		"prettier": "^2.0.5",
		"ramda": "^0.27.0",
		"rimraf": "^3.0.2",
		"rollup": "^2.12.0",
		"rollup-plugin-cleaner": "^1.0.0",
		"rollup-plugin-copy": "^3.3.0",
		"rollup-plugin-terser": "^6.1.0",
		"sass": "^1.26.10",
		"style-dictionary": "^2.10.0",
		"tslib": "^2.0.0",
		"typescript": "^3.9.7",
		"web-component-analyzer": "^1.1.6",
		"yargs": "^15.4.1"
	},
	"eslintConfig": {
		"extends": [
			"@open-wc/eslint-config",
			"eslint-config-prettier"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.ts": [
			"eslint"
		]
	}
}
