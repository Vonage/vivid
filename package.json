{
	"name": "@vivid/root",
	"private": true,
	"description": "Web Components based on branded design system by Vonage, following open-wc recommendations",
	"author": "Vonage",
	"license": "ISC",
	"workspaces": [
		"common/*",
		"components/*"
	],
	"scripts": {
		"dep-check": "lerna exec --stream --no-bail depcheck",
		"changelog": "yarn lerna exec --concurrency 1 --stream 'conventional-changelog --preset angular --release-count 0 --commit-path $PWD --pkg $PWD/package.json --outfile $PWD/CHANGELOG.md --verbose'",
		"stylelint-check": "stylelint-config-prettier-check",
		"lint:stylelint": "stylelint --config .stylelintrc.js {common,components}/**/*.scss",
		"lint:eslint": "eslint {common,components}/** --no-error-on-unmatched-pattern",
		"lint:prettier": "prettier {common,components}/**/*.{ts,scss} **/stories **/test/*.test.js --config .prettierrc.js --ignore-path .prettierignore --check",
		"lint": "yarn lint:eslint && yarn lint:stylelint && yarn lint:prettier",
		"format:stylelint": "yarn lint:stylelint --fix",
		"format:eslint": "yarn lint:eslint --fix",
		"format:prettier": "yarn lint:prettier --write",
		"format": "yarn format:stylelint && yarn format:eslint && yarn format:prettier",
		"tsc:watch": "tsc --build --watch",
		"test:prepublish": "karma start --coverage --browsers=ChromeHeadless,FirefoxHeadless",
		"test:chrome": "karma start --coverage --browsers=ChromeHeadless",
		"test:firefox": "karma start --coverage --browsers=FirefoxHeadless",
		"test:safari": "karma start --coverage --browsers=SafariNative",
		"test:dev": "yarn compile && concurrently \"yarn tsc:watch\" \"karma start karma.conf.spec.js\"",
		"test:dev:ci": "yarn compile && concurrently \"yarn tsc:watch\" \"RUN=CI karma start karma.conf.spec.js\"",
		"test:update-snapshots": "karma start --update-snapshots",
		"test:prune-snapshots": "karma start --prune-snapshots",
		"test:bs": "karma start karma.bs.config.js --coverage",
		"git:sync": "git submodule sync && git submodule update --init --recursive --remote",
		"postinstall": "husky install && yarn link",
		"link": "lerna link",
		"storybook:vivid:pre": "yarn compile && yarn wca:json && node ./.storybook/build-scripts/build-pre.mjs",
		"storybook:vivid:post": "node ./.storybook/build-scripts/build-post.mjs",
		"storybook:build": "yarn storybook:vivid:pre && build-storybook -c .storybook -o .out -s ./.storybook/static && yarn storybook:vivid:post",
		"start": "yarn storybook:vivid:pre && start-storybook -s ./.storybook/static -p 9000",
		"build:design-tokens": "lerna run build --scope @vonage/vvd-design-tokens",
		"compile": "lerna run build --stream",
		"compile:styles": "lerna run build:styles --stream",
		"compile:typescript": "tsc -b",
		"clean:typescript": "tsc -b --clean",
		"clean:git": "git clean -xdf",
		"clean": "yarn clean:typescript && yarn clean:git",
		"watch": "node scripts/watcher.js",
		"wca:json": "wca analyze components/*/src/*.?s --outFile custom-elements.json",
		"wca:compile:json": "yarn compile && yarn wca:custom-elements",
		"docs:spell-check": "spech readme.md docs/*.md"
	},
	"devDependencies": {
		"@hint/configuration-development": "^8.1.0",
		"@open-wc/eslint-config": "^3.0.0",
		"@open-wc/karma-esm": "^3.0.9",
		"@open-wc/lit-helpers": "^0.3.11",
		"@open-wc/semantic-dom-diff": "^0.19.0",
		"@open-wc/testing-karma": "^4.0.9",
		"@storybook/addon-a11y": "^6.1.1",
		"@storybook/addon-actions": "^6.1.1",
		"@storybook/addon-console": "^1.2.2",
		"@storybook/addon-controls": "^6.1.1",
		"@storybook/addon-docs": "^6.1.1",
		"@storybook/addon-viewport": "^6.1.1",
		"@storybook/addons": "^6.1.0",
		"@storybook/react": "^6.1.1",
		"@storybook/theming": "^6.1.1",
		"@storybook/web-components": "^6.1.0",
		"@typescript-eslint/eslint-plugin": "^4.14.2",
		"@typescript-eslint/parser": "^4.14.2",
		"@webcomponents/webcomponentsjs": "^2.5.0",
		"@whitespace/storybook-addon-html": "^4.2.0",
		"chai": "^4.2.0",
		"chai-a11y-axe": "^1.3.1",
		"chai-karma-snapshot": "^0.8.0",
		"chokidar": "^3.4.0",
		"command-line-args": "^5.1.1",
		"command-line-usage": "^6.1.0",
		"concurrently": "^5.2.0",
		"conventional-changelog-cli": "^2.1.0",
		"deepmerge": "^4.2.2",
		"depcheck": "YonatanKra/depcheck#vivid-version",
		"es-dev-server": "^1.50.8",
		"eslint": "^7.13.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-compat": "^3.9.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-lit": "^1.2.4",
		"eslint-plugin-lit-a11y": "^1.0.1",
		"eslint-plugin-mocha": "^8.0.0",
		"eslint-plugin-no-only-tests": "^2.4.0",
		"eslint-plugin-wc": "^1.2.0",
		"fibers": "^5.0.0",
		"glob": "^7.1.6",
		"got": "^11.8.1",
		"highlight.js": "^10.4.0",
		"hint": "^6.1.1",
		"husky": "^5.0.8",
		"immer": "^8.0.1",
		"ini": "^1.3.6",
		"jsdoc-to-markdown": "^6.0.1",
		"karma": "^5.2.3",
		"karma-chai": "^0.1.0",
		"karma-chrome-launcher": "^3.1.0",
		"karma-coverage-istanbul-reporter": "^3.0.3",
		"karma-file-fixtures-preprocessor": "^3.0.1",
		"karma-firefox-launcher": "^2.1.0",
		"karma-html": "^1.0.5",
		"karma-mocha": "^2.0.1",
		"karma-mocha-reporter": "^2.2.5",
		"karma-safarinative-launcher": "^1.1.0",
		"kefir": "^3.8.7",
		"lerna": "^3.22.1",
		"lint-staged": "^10.2.11",
		"lodash": "^4.17.20",
		"minimist": "^1.2.5",
		"mocha": "^8.1.3",
		"node-sass": "^5.0.0",
		"prettier": "^2.2.1",
		"prism": "^4.1.2",
		"sass": "^1.30.0",
		"semver-compare": "^1.0.0",
		"semver-diff": "^3.1.1",
		"showdown": "^1.9.1",
		"showdown-htmlescape": "^0.1.9",
		"spech": "^0.2.1",
		"standard-version": "^9.1.0",
		"stylelint": "^13.9.0",
		"stylelint-a11y": "^1.2.3",
		"stylelint-config-idiomatic-order": "^8.1.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-sass-guidelines": "^7.1.0",
		"stylelint-no-unsupported-browser-features": "^4.1.4",
		"stylelint-prettier": "^1.1.2",
		"tar-stream": "^2.1.4",
		"tslib": "^2.0.3",
		"typescript": "^4.1.3",
		"uuid": "^8.3.1",
		"web-component-analyzer": "^1.1.6"
	},
	"engines": {
		"node": ">=12.18.4"
	}
}
