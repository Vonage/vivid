{
	"name": "@vivid/root",
	"private": true,
	"description": "Web components based on branded design system by Vonage. following open-wc recommendations",
	"author": "Vonage",
	"license": "Apache-2.0",
	"workspaces": [
		"components/*",
		"common/*"
	],
	"scripts": {
		"lint:eslint": "eslint components/* common/* --ignore-path .eslintignore --config .eslintrc.yaml",
		"format:eslint": "eslint --ext .js,.html . --fix --ignore-path .eslintignore",
		"lint:prettier": "prettier \"**/*.js\" --check --ignore-path .eslintignore",
		"format:prettier": "prettier \"**/*.js\" --write --ignore-path .eslintignore",
		"lint": "yarn lint:eslint && yarn lint:prettier",
		"format": "yarn format:eslint && yarn format:prettier",
		"test": "karma start --coverage",
		"test:dev": "karma start --auto-watch=true --single-run=false --browsers=Chrome",
		"test:update-snapshots": "karma start --update-snapshots",
		"test:prune-snapshots": "karma start --prune-snapshots",
		"test:bs": "karma start karma.bs.config.js --coverage",
		"git:sync": "git submodule sync && git submodule update --init --recursive --remote",
		"prepack": "yarn git:sync && yarn build",
		"postinstall": "yarn bootstrap",
		"bootstrap": "lerna bootstrap",
		"storybook:build": "build-storybook",
		"storybook:start": "concurrently --kill-others --names tsc,storybook \"yarn watch\" \"start-storybook -s storybook-static --node-resolve --watch -p 9384\"",
		"compile": "yarn compile:design-tokens && yarn compile:styles && yarn compile:typescript",
		"compile:styles": "node ./common/fonts/build/embed-fonts.js && ./scripts/build-styles.sh",
		"compile:typescript": "tsc --build",
		"compile:design-tokens": "lerna run build --scope=\"@vonage/vvd-design-tokens\"",
		"prestart": "yarn compile",
		"start": "yarn dev:server",
		"build": "yarn compile && rimraf dist && tsc && rollup -c rollup.config.js",
		"start:build": "yarn build && es-dev-server --root-dir dist --app-index index.html --open --compatibility none",
		"dev:server": "es-dev-server --config es-dev-server.config.js",
		"git:clean": "git clean -xdf",
		"powerwash:ts": "rm components/*/*.js & rm components/*/*.js.map & rm components/*/*.d.ts & rm components/*/.tsbuildinfo && rm common/*/*.js & rm common/*/*.js.map & rm common/*/*.d.ts & rm common/*/.tsbuildinfo ",
		"powerwash:styling": "rm components/*/src/*.css.ts & rm common/*/src/*.css.ts",
		"powerwash": "yarn powerwash:ts && yarn powerwash:styling && rm -rf node_modules",
		"watch": "node scripts/watcher.js"
	},
	"dependencies": {
		"lit-html": "^1.2.1",
		"navigo": "^7.1.2"
	},
	"devDependencies": {
		"@open-wc/building-rollup": "^1.3.1",
		"@open-wc/demoing-storybook": "^2.3.0",
		"@open-wc/eslint-config": "^2.0.6",
		"@open-wc/testing": "^2.5.16",
		"@open-wc/testing-karma": "^3.3.30",
		"@open-wc/testing-karma-bs": "^1.3.73",
		"@open-wc/karma-esm": "^2.16.10",
		"@rollup/plugin-typescript": "^4.1.2",
		"@rollup/plugin-babel": "^5.0.2",
		"@typescript-eslint/eslint-plugin": "^3.1.0",
		"@typescript-eslint/parser": "^3.1.0",
		"@webcomponents/webcomponentsjs": "^2.4.3",
		"chai": "^4.2.0",
		"karma": "^5.0.9",
		"karma-coverage-istanbul-reporter": "^3.0.2",
		"karma-chai": "^0.1.0",
		"karma-chrome-launcher": "^3.1.0",
		"karma-firefox-launcher": "^1.3.0",
		"karma-mocha": "^2.0.1",
		"karma-mocha-reporter": "^2.2.5",
		"mocha": "^7.2.0",
		"command-line-args": "^5.1.1",
		"command-line-usage": "^6.1.0",
		"deepmerge": "^4.2.2",
		"es-dev-server": "^1.50.8",
		"eslint": "^7.1.0",
		"eslint-plugin-wc": "^1.2.0",
		"eslint-plugin-lit": "^1.2.0",
		"eslint-plugin-babel": "^5.3.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-mocha": "^7.0.1",
		"lint-staged": "^10.2.8",
		"fibers": "^5.0.0",
		"husky": "^4.2.5",
		"lerna": "^3.21.0",
		"@kuscamara/code-sample": "^3.0.2",
		"concurrently": "^5.2.0",
		"chokidar": "^3.4.0",
		"sass": "^1.26.5",
		"node-sass": "^4.14.1",
		"node-sass-import": "^2.0.1",
		"style-dictionary": "^2.10.0",
		"rimraf": "^3.0.2",
		"rollup": "^2.12.0",
		"typescript": "^3.9.3",
		"tslib": "^2.0.0",
		"node-watch": "^0.6.4",
		"rollup-plugin-copy": "^3.3.0",
		"prettier": "^2.0.5"
	},
	"eslintConfig": {
		"extends": [
			"@open-wc/eslint-config",
			"eslint-config-prettier"
		]
	},
	"prettier": "@open-wc/prettier-config/prettier.config.js",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"prettier --write",
			"git add"
		]
	}
}